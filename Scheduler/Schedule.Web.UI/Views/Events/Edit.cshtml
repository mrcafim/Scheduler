@model EventQueryResult
@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Edit">
        <div class="form-horizontal">
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Title" class="col-md-2 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="StartDate" class="col-md-2 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EndDate" class="col-md-2 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>            
            <div class="form-group mb-3">
                <label asp-for="Location" class="col-md-2 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="col-md-2 control-label"></label>
                <div class="col-md-12">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="d-flex flex-row justify-content-end">
                    <a asp-action="Index" class="btn btn-light">Back</a>
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>
</div>